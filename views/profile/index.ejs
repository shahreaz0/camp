<%- include("../partials/top") %>

<div class="ui grid">
	<div class="sixteen wide mobile four wide tablet four wide computer column">
		<div class="ui grid">
			<div class="six wide mobile sixteen wide tablet sixteen wide computer column">
				<img
					class="ui fluid image circular bordered"
					src="<%= userProfile.thumbnail %>"
				/>
			</div>
			<div class="ten wide mobile sixteen wide tablet sixteen wide computer column">
				<div class="ui list">
					<div class="item">
						<i class="users icon"></i>
						<div class="content"><%= userProfile.fullName %></div>
					</div>
					<div class="item">
						<i class="mail icon"></i>
						<div class="content">
							<a href="mailto:<%= userProfile.email %>">
								<%= userProfile.email %>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="sixteen wide mobile ten wide tablet ten wide computer column">
		<% if (userProfile.posts.length === 0) { %>
		<h4>No post added by <%= userProfile.fullName %></h4>
		<% } else { %>
		<h4>Posts by <%= userProfile.fullName %></h4>
		<table class="ui green table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Status</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% userProfile.posts.forEach(post => { %>
				<tr>
					<td data-label="Title"><%= post.title %></td>
					<td data-label="Status"><%= capitalize(post.status) %></td>
					<% if (user && post.creator.equals(user._id)) { %>
					<td data-label="Actions">
						<a class="ui button grey" href="/camps/<%= post._id%>/edit">
							<i class="edit outline icon"></i>
							Edit
						</a>
						<form
							action="/camps/<%= post._id%>?_method=DELETE"
							method="POST"
							style="display: inline"
						>
							<button
								class="ui button red"
								onclick="return confirm('Click Ok to delete post.');"
							>
								<i class="trash alternate outline icon"></i>
								Delete
							</button>
						</form>
					</td>
					<% } else { %>
					<td data-label="Actions">
						<a class="ui green button" href="<%= post.pdfFileUrl %>">
							<i class="arrow down icon"></i>
							Download PDF
						</a>
					</td>
					<% } %>
				</tr>
				<% }) %>
			</tbody>
		</table>
		<% } %>
	</div>
</div>

<%- include("../partials/bottom") %>
